{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
		"removeComments": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"]
}
